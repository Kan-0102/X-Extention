{
  "manifest_version": 3,
  "name": "Tweet Helper (Step2)",
  "version": "0.4.1",
  "description": "Retweet/引用RT時にツイート本文を取得して形態素解析・重要語句検出",
  "permissions": [],
  "host_permissions": [
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": ["vendor/kuromoji/build/kuromoji.js", "extractor.js","content_x.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/kuromoji/dict/*",
        "assets/stopwords.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}